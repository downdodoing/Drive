<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_back"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/title_back" >

            <ImageView
                android:id="@+id/money_back"
                style="@style/back_bnt_style" />

            <TextView
                android:id="@+id/textView1"
                style="@style/wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/prictice_money_title"
                android:textColor="#ffffff"
                android:textSize="@dimen/title_text_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#c8c7cc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#ffffff" >

            <TextView
                style="@style/change_psd"
                android:text="@string/prictice_2" />

            <EditText
                android:id="@+id/practice_2"
                style="@style/change_psd_edit"
                android:hint="请输入金额" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#c8c7cc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#ffffff" >

            <TextView
                style="@style/change_psd"
                android:text="@string/prictice_3" />

            <EditText
                android:id="@+id/practice_3"
                style="@style/change_psd_edit"
                android:hint="请输入金额" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc" />

        <RelativeLayout
            android:id="@+id/practice_Ok_bnt"
            style="@style/ok_bnt_style" >

            <TextView
                style="@style/wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/OK1"
                android:textColor="#ffffff"
                android:textSize="@dimen/ok_bnt_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <include
        style="@style/progressbar_style"
        layout="@layout/progressbar" />

</RelativeLayout>